#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Auto-incrementar versión antes de cada commit
echo "Actualizando versión del sistema..."
node update-version-auto.js

# Agregar archivos de versión al commit
git add frontend/src/config/version.ts
git add backend/src/config/version.ts
git add frontend/package.json
git add backend/package.json
git add VERSION.md

echo "✓ Versión actualizada automáticamente"
