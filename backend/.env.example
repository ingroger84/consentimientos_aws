# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Multi-Tenant (Subdominios)
# Para desarrollo local usar: localhost
# Para producción usar: tudominio.com
BASE_DOMAIN=localhost

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=admin
DB_PASSWORD=admin123
DB_DATABASE=consentimientos

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# AWS S3 / MinIO
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_REGION=us-east-1
AWS_S3_BUCKET=consentimientos
AWS_S3_ENDPOINT=http://localhost:9000
USE_S3=false

# Email - Gmail Configuration
# Para usar Gmail:
# 1. Habilita la verificación en 2 pasos en tu cuenta de Gmail
# 2. Ve a https://myaccount.google.com/apppasswords
# 3. Genera una contraseña de aplicación
# 4. Usa esa contraseña en SMTP_PASSWORD
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-contraseña-de-aplicacion
SMTP_FROM=tu-email@gmail.com
SMTP_FROM_NAME=Innova Systems - Sistema de Consentimientos

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Bold Payment Gateway
# Obtén tus credenciales en: https://bold.co
BOLD_API_KEY=your_bold_api_key_here
BOLD_SECRET_KEY=your_bold_secret_key_here
BOLD_MERCHANT_ID=your_merchant_id_here
BOLD_API_URL=https://api.bold.co/v1
BOLD_WEBHOOK_SECRET=your_webhook_secret_here

# URLs para Bold
BOLD_SUCCESS_URL=http://localhost:5173/payment/success
BOLD_FAILURE_URL=http://localhost:5173/payment/failure
BOLD_WEBHOOK_URL=http://localhost:3000/api/webhooks/bold
